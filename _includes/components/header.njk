<header class="flex items-center">
  <div class="px-4 sm:px-6 max-w-screen-md w-full mx-auto">
    <div class="py-2 w-full flex justify-between border-b border-gray-300 dark:border-gray-500 border-dashed">
      <div class="flex items-center">
        <a class="pr-3 flex flex-row items-center" data-splitbee-event="Click Logo" href="/">
          <img class="mr-2 w-6 h-6" src="/assets/img/favicon.svg" alt="{{ metadata.title }}"/>
          <span class="text-2xl text-gray-800 dark:text-gray-200 font-serif tracking-wide uppercase logo">
            {{ metadata.title }}
          </span>
        </a>
      </div>
      <nav class="flex sm:justify-start items-center uppercase">
        <ul class="flex justify-center text-tiny text-gray-700 dark:text-gray-200 font-serif">
          {% for item in menu %}
            <li class="inline-block px-2 sm:px-2 hover:text-primary">
              <a data-splitbee-event="{{ item.event }}" href="{{ item.url }}">{{ item.name }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    </div>
  </div>
</header>