---
layout: layouts/base.njk
---

<div class="my-6 sm:my-8">
  <div class="content">
    {{ content | safe }}
  </div>
</div>

<div class="my-6 sm:my-8">
  <h1 class="mb-4 text-primary text-2xl font-semibold logo">Featured</h1>
  {% set postslist = collections.featured | reverse | head(15) %}
  <div>
    {% for post in postslist %}
      <div class="mb-4">
        <h2 class="text-lg mb-1">
          <a href="{{ post.url | url }}" class="hover:text-primary text-gray=600">
            {{ post.data.title }}
          </a>
        </h2>
        <p class="text-gray-500 mb-1">
          {{ post.data.description }}
        </p>
        <time class="text-gray-400 text-sm">
          {{ page.date | format("yyyy-MM-dd") }}
        </time>
      </div>
    {% endfor %}
  </ol>
</div>